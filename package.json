{
  "name": "devops-factory",
  "version": "1.0.0",
  "description": "AI Factory - Automated DevOps for multi-project management",
  "type": "module",
  "private": true,
  "scripts": {
    "scan": "tsx scripts/scan-and-configure.ts",
    "dashboard": "tsx scripts/build-dashboard.ts",
    "ci-health": "tsx scripts/ci-health-check.ts",
    "fix-prettier": "tsx scripts/auto-fix-prettier.ts",
    "protect-branches": "tsx scripts/branch-protection.ts",
    "self-heal": "tsx scripts/self-heal.ts",
    "coverage": "tsx scripts/coverage-baseline.ts",
    "test-scaffold": "tsx scripts/test-scaffold.ts",
    "quality-score": "tsx scripts/quality-score.ts",
    "claude-review": "tsx scripts/claude-review.ts",
    "pr-description": "tsx scripts/pr-description.ts",
    "feedback": "tsx scripts/feedback-collector.ts",
    "coverage-gate": "tsx scripts/coverage-gate.ts",
    "ai-test-writer": "tsx scripts/ai-test-writer.ts",
    "migration-tracker": "tsx scripts/migration-tracker.ts",
    "migration-checklist": "tsx scripts/migration-checklist.ts",
    "dep-intel": "tsx scripts/dependency-intelligence.ts",
    "watchdog": "tsx scripts/factory-watchdog.ts",
    "veille": "tsx scripts/weekly-veille.ts",
    "template-update": "tsx scripts/template-updater.ts",
    "security-posture": "tsx scripts/security-posture.ts",
    "template-drift": "tsx scripts/template-drift.ts",
    "dora": "tsx scripts/dora-metrics.ts",
    "cost-monitor": "tsx scripts/cost-monitor.ts",
    "cross-update": "tsx scripts/cross-repo-update.ts",
    "open": "start https://thonyagp.github.io/DevOps-Factory/",
    "watch": "powershell -NoProfile -File scripts/watch-dashboard.ps1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
