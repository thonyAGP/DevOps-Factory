{
  "name": "devops-factory",
  "version": "1.0.0",
  "description": "AI Factory - Automated DevOps for multi-project management",
  "type": "module",
  "private": true,
  "scripts": {
    "scan": "tsx scripts/scan-and-configure.ts",
    "dashboard": "tsx scripts/build-dashboard.ts",
    "open": "start https://thonyagp.github.io/DevOps-Factory/",
    "watch": "powershell -NoProfile -File scripts/watch-dashboard.ps1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
